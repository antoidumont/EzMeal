<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/My_account"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="19dp"
        android:layout_marginTop="14dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="26dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />
    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/soup"
        android:id="@+id/imageView2"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="14dp" />

    <ImageButton

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/soup"
        android:id="@+id/imageView3"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2"/>



    <EditText
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dewitt"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/First_Name"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="11dp" />

    <EditText
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alexandre"
        android:textSize="16sp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Age"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="10dp"
        android:layout_alignEnd="@+id/textView2" />

    <EditText
        android:id="@+id/editText12"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="19"
        android:textSize="16sp"
        android:layout_alignTop="@+id/planets_spinner2"
        android:layout_alignStart="@+id/textView6"
        android:layout_toStartOf="@+id/planets_spinner2"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Sex"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginStart="32dp"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

    <Spinner
        android:id="@+id/planets_spinner2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignStart="@+id/textView8" />


    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Address"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2" />

    <EditText
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1, rue du troll
1420, Braine-l'alleud
Belgique"
        android:textSize="14sp"
        android:layout_below="@+id/planets_spinner2"
        android:layout_alignStart="@+id/textView10" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Favourite_Language"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView11"
        android:layout_alignStart="@+id/textView11" />




    <Button

        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/cancel"
        android:background="#a2b753"
        android:textColor="#ffffff"
        style="?android:textAppearanceSmall"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button

        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/Apply"
        android:background="#386479"
        android:textColor="#ffffff"
        style="?android:textAppearanceSmall"
        android:onClick="clickHandler"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/button2"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:id="@+id/planets_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12"
        android:layout_alignStart="@+id/textView12"
        android:layout_alignEnd="@+id/imageView2" />

</RelativeLayout>



